@model ICollection<FileType>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-12">
        <h4 class="text-center">File Types</h4>
        <hr />
    </div>
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th>Id</th>
                    <th>File Type Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>